<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tushar.popularmovies.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/movie_name"
        android:background="@color/moviename"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:elevation="6sp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:id="@+id/movie_icon" />

            <TextView
                android:layout_width="5sp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/movie_release"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:id="@+id/movie_rating" />

                <Button
                    android:layout_width="100sp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/favourite_button"
                    android:elevation="6dp"
                    android:textColor="@color/white"
                    android:background="@color/moviename"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:padding="5sp"
            android:id="@+id/movie_overview"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginTop="5sp"
            android:background="@color/grey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:text="@string/trailers"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/play_button"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/play_trailer1"
            android:textColor="@color/white"
            android:background="@color/moviename"
            android:id="@+id/trailer1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/play_button"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/play_trailer2"
            android:background="@color/moviename"
            android:textColor="@color/white"
            android:id="@+id/trailer2"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="10sp"
        android:background="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp">

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/review"/>


        <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/review"
        android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"
        android:background="@color/moviename"
        android:textColor="@color/white"
        android:id="@+id/review"/>

        </LinearLayout>


    <WebView
        android:layout_width="3sp"
        android:layout_height="1sp"
        android:layout_marginTop="20sp"
        android:id="@+id/webview"
        android:layout_marginLeft="20sp"/>

</LinearLayout>

</ScrollView>